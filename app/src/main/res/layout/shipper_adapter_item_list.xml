<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/no"
        android:padding="5dp"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="#1111"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:text="1"/>
    <TextView
        android:id="@+id/sumber"
        android:padding="5dp"
        android:background="#1111"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_weight=".9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="1"/>
    <TextView
        android:id="@+id/normal"
        android:padding="5dp"
        android:background="#1111"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_weight="1"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="1"/>
    <TextView
        android:id="@+id/dp"
        android:padding="5dp"
        android:background="#1111"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_weight="1"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="1"/>
    <TextView
        android:id="@+id/temp"
        android:padding="5dp"
        android:layout_weight="1"
        android:background="#1111"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="1"/>
    <TextView
        android:id="@+id/pressure"
        android:padding="5dp"
        android:background="#1111"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:gravity="right"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="1"/>
    <TextView
        android:id="@+id/vol_hour"
        android:padding="5dp"
        android:background="#1111"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:gravity="right"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="1"/>
    <TextView
        android:id="@+id/vol_day"
        android:padding="5dp"
        android:gravity="right"
        android:background="#1111"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="1"/>
    <TextView
        android:id="@+id/flow_rate"
        android:padding="5dp"
        android:background="#1111"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:gravity="right"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="1"/>
    <TextView
        android:id="@+id/comment"
        android:padding="5dp"
        android:background="#1111"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:textAlignment="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="1"/>
    <TextView
        android:id="@+id/diff"
        android:padding="5dp"
        android:background="#1111"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:gravity="right"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="1"/>
</LinearLayout>